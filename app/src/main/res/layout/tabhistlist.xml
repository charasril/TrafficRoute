<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:text="ทั้งหมด"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp" />

    <RadioButton
        android:text="เฉพาะวัน"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton_date"
        android:layout_alignBaseline="@+id/radioButton"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_toRightOf="@+id/button_hist_search"
        android:layout_toEndOf="@+id/button_hist_search" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/editText"
        android:layout_alignBaseline="@+id/radioButton_date"
        android:layout_alignBottom="@+id/radioButton_date"
        android:layout_toRightOf="@+id/radioButton_date"
        android:layout_toEndOf="@+id/radioButton_date" />

    <RadioButton
        android:text="สถานที่"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton"
        android:layout_marginTop="12dp"
        android:id="@+id/radioButton_place" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBaseline="@+id/radioButton_place"
        android:layout_alignBottom="@+id/radioButton_place"
        android:layout_toRightOf="@+id/button_hist_search"
        android:layout_toEndOf="@+id/button_hist_search" />

    <Button
        android:text="เส้นทาง"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:id="@+id/button_hist_way"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <Button
        android:text="ค้นหา"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/button_hist_search"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/radioButton_place"
        android:layout_alignStart="@+id/radioButton_place" />
</RelativeLayout>
