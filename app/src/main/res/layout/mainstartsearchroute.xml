<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="UserName : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Password : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/editText_user_name"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Password"
        android:ems="10"
        android:id="@+id/editText_user_password"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/editText_user_name"
        android:layout_alignStart="@+id/editText_user_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="User Name"
        android:ems="10"
        android:id="@+id/editText_user_name"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <CheckBox
        android:text="Forgot Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_forgotPassword"
        android:layout_marginTop="34dp"
        android:checked="false"
        android:layout_below="@+id/button_connect_close"
        android:layout_alignLeft="@+id/button_connect_close"
        android:layout_alignStart="@+id/button_connect_close"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/checkBox_forgotUser"
        android:layout_alignRight="@+id/editText_user_password"
        android:layout_alignEnd="@+id/editText_user_password"
        android:layout_marginTop="17dp"
        android:id="@+id/editText_User" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/editText_new_password"
        android:layout_alignRight="@+id/editText_new_password"
        android:layout_alignEnd="@+id/editText_new_password"
        android:layout_marginTop="24dp"
        android:id="@+id/editText_confirm_new_password"
        android:text="Confirm Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText_confirm_new_password"
        android:layout_alignEnd="@+id/editText_confirm_new_password"
        android:layout_marginBottom="13dp"
        android:id="@+id/editText_email"
        android:text="E-mail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/editText_new_password"
        android:layout_below="@+id/editText_User"
        android:layout_alignLeft="@+id/editText_User"
        android:layout_alignStart="@+id/editText_User"
        android:text="New Password" />

    <TextView
        android:text="UserName : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignBaseline="@+id/editText_User"
        android:layout_alignBottom="@+id/editText_User"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:text="Password : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText_new_password"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="10dp"
        android:id="@+id/textView12" />

    <TextView
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/editText_confirm_new_password"
        android:layout_alignBottom="@+id/editText_confirm_new_password"
        android:layout_toLeftOf="@+id/button_user_connect"
        android:layout_toStartOf="@+id/button_user_connect" />

    <TextView
        android:text="E-mail : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_email"
        android:layout_toLeftOf="@+id/editText_user_name"
        android:layout_toStartOf="@+id/editText_user_name"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView14" />

    <CheckBox
        android:text="Forgot UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_forgotUser"
        android:layout_alignBaseline="@+id/checkBox_forgotPassword"
        android:layout_alignBottom="@+id/checkBox_forgotPassword"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_connect_close"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/button_user_connect"
        android:layout_alignBottom="@+id/button_user_connect"
        android:layout_alignRight="@+id/editText_user_password"
        android:layout_alignEnd="@+id/editText_user_password" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_user_connect"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/editText_user_password"
        android:layout_alignRight="@+id/checkBox_forgotUser"
        android:layout_alignEnd="@+id/checkBox_forgotUser" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/button_connect_save"
        android:layout_alignBottom="@+id/editText_email"
        android:layout_alignRight="@+id/checkBox_forgotPassword"
        android:layout_alignEnd="@+id/checkBox_forgotPassword" />

</RelativeLayout>
